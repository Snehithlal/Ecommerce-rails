
<%= form_with(url: categories_path, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :create_category ,class: "col-sm-2 col-form-label"%>
        <%= f.text_field :name, autofocus: true, class: "form-control col-sm-10" %>
     </div>
     <%= f.submit "Create", class: "btn btn-lg btn-primary" %>
<% end %>
