
<%=form_for(@category) do |f|%>
    <%= flash_messages %>

    <div class="form-group row">
        <%= f.label :name ,class: "col-sm-2 col-form-label"%>
        <%= f.text_field :name, autofocus: true, class: "form-control col-sm-10" %>
     </div>
     <%= f.submit "Create", class: "btn btn-lg btn-primary" %>
<% end %>