
<%=form_for(product) do |f|%>
    <%= flash_messages %>

    <div class="form-group row">
        <%= f.label :name ,class: "col-sm-2 col-form-label"%>
        <%= f.text_field :name, autofocus: true, class: "form-control col-sm-10",required: true %>
     </div>

     <div class="form-group row">
        <%= f.label :price ,class: "col-sm-2 col-form-label"%>
        <%= f.number_field :price, autofocus: true, class: "form-control col-sm-10", required: true %>
    </div>


    <%= f.fields_for :stock, product.stock || Stock.new do |ff| %>
        <div class="form-group row">
            <%= ff.label :category ,class: "col-sm-2 col-form-label"%>
            <%= ff.select :category_id, options_for_select(categories.map { |category| [category.name, category.id] }), {},{class:"form-control col-sm-10"} %>
         </div>
        <div class="form-group row">
            <%= ff.label :count ,class: "col-sm-2 col-form-label"%>
            <%= ff.number_field :count, autofocus: true, class: "form-control col-sm-10", required: true%>
         </div>
     <% end %>

    <div class="form-group row">
        <%= f.label :upload_image ,class: "col-sm-2 col-form-label"%>
        <%= f.file_field :image, autofocus: true, class: "form-control col-sm-10" %>
    </div>
      <%= f.submit "Create", class: "btn btn-lg btn-primary" %>
<% end %>